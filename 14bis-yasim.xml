<!-- Santos-Dumont 14-bis - 2010 Emmanuel BARANGER
   
     sources          : http://en.wikipedia.org/wiki/Santos-Dumont_14-bis

     wingspan         :   11.20 m          (   36 ft 90 in )
     length           :    9.70 m          (   31 ft 10 in )
     height           :    3.40 m          (   11 ft 20 in )
     empty weight     :     155 kg         (  340 lb       ) approximately
     engine           : Antoinette V-8     (   50 hp       )
     Maximum speed    :  32 km/h           (   18 kt       )
-->

<airplane mass="340">

  <!-- Configuration d'approche -->
  <approach speed="6" aoa="2">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.8"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
  </approach>

  <!-- Configuration de croisiere -->
  <cruise speed="18" alt="3000">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.75"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.75"/>
  </cruise>

  <!-- Point de vue du pilote -->
  <cockpit x="-1.477" y="0" z="1.718"/>

  <fuselage ax="3.969" ay="0" az="0.618" bx="-4.294" by="0" bz="0.621" width="0.71" taper="0.16" midpoint="0.70"/>

  <wing x="-2.440" y="0.235" z="1.527"  
        chord="2.530" 
        length="5.323" 
        taper="1" 
        dihedral="10" 
        camber="0.001">
        <stall aoa="8" width="1" peak="1.5"/>
        <flap0 start="0.31" end="0.85" lift="1.4" drag="1.7"/>

        <control-input axis="/controls/flight/aileron" control="FLAP0" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP0" split="true"/>

        <control-output control="FLAP0" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP0" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </wing>

  <mstab x="-2.440" y="0.465" z="-0.1"  
         chord="2.530" 
         length="5.323" 
         taper="1" 
         dihedral="10" 
         camber="0.001">
         <stall aoa="8" width="1" peak="1.5"/>
         <flap0 start="0.31" end="0.85" lift="1.4" drag="1.7"/>

         <control-input axis="/controls/flight/aileron" control="FLAP0" split="true"/>
         <control-input axis="/controls/flight/aileron-trim" control="FLAP0" split="true"/>

         <control-output control="FLAP0" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
         <control-output control="FLAP0" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </mstab>

  <hstab x="4.033" y="0" z="1.360"
         chord="2.018" 
         length="0.983" 
         taper="1" 
         sweep="0">
         <stall aoa="7" width="1" peak="1.2"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.2"/> 

         <control-input axis="/controls/flight/elevator" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/aileron-trim" control="FLAP0" split="true"/> 
 
         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <hstab x="4.033" y="0" z="-0.110"
         chord="2.018" 
         length="0.983" 
         taper="1">
         <stall aoa="7" width="1" peak="1.2"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.2"/> 

         <control-input axis="/controls/flight/elevator" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>
<!--
  <vstab x="4.033" y="1.008" z="-0.110" 
-->
  <vstab x="4.033" y="0.000" z="-0.110" 
         chord="2.018" 
         length="1.487" 
         taper="1">
         <stall aoa="6" width="2" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.2"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>
<!--
  <vstab x="4.033" y="-1.008" z="-0.110" 
         chord="2.018" 
         length="1.487" 
         taper="1">
         <stall aoa="6" width="2" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.2"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>
-->
  <!-- Engines   source            : http://www.wwi-models.org/Photos/Engines/Antoinette/index.html
                                     http://en.wikipedia.org/wiki/Antoinette_%28manufacturer%29

                 name              : Antoinette V8 engine
                 type              : V8 engine
                 Displacement      : 7.2 L (439 in3)
                 power cruise      : 32 hp
                 weight            : ?
  -->
  <propeller x="-2.266" y="0" z="0.740"
             radius="0.95" 
             mass="88"
             moment="10"
             cruise-alt="3000"
             cruise-speed="15"
             cruise-rpm="1200"
             cruise-power="25"
             takeoff-rpm="1300"
             takeoff-power="32">
             <actionpt x="-4.406" y="0" z="0.621"/>
             <piston-engine eng-power="32"
                            eng-rpm="1450"
                            displacement="439">
                            <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
                            <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
                            <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
                            <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
             </piston-engine>
  </propeller>

  <!-- Roue gauche -->
  <gear x="-1.847" y=" 0.448" z="-0.978" 
        compression="0.05"
        spring="0.6"
        sfric="1.8"
        dfric="1.4">
  </gear>

  <!-- Roue droite -->
  <gear x="-1.847" y="-0.448" z="-0.978" 
        compression="0.05"
        spring="0.6"
        sfric="1.8"
        dfric="1.4">
  </gear>

  <!-- Pate avant -->
  <gear x="2.177" y="0.00" z="-0.710" 
        compression="0.01"
        spring="15" 
        sfric="1.8"
        dfric="1.4">
  </gear>

  <!-- Pate gauche -->
  <gear x="-1.732" y=" 4.114" z="-0.934"
        compression="0.01"
        spring="15" 
        sfric="1.8"
        dfric="1.4">
  </gear>

  <!-- Pate droite -->
  <gear x="-1.732" y="-4.114" z="-0.934"
        compression="0.01"
        spring="15" 
        sfric="1.8"
        dfric="1.4">
  </gear>

  <!-- Juste un reservoir au dessus du moteur -->
  <tank x="-2.410" y="0" z="2.290" capacity="20"/> 

  <ballast x="5" y="0" z="-4" mass="30" />

</airplane>

