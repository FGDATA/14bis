<?xml version="1.0"?>

<PropertyList>

 <path>14bis.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>structure</object-name>
    <object-name>gouverne2</object-name>
    <object-name>aileronG2</object-name>
    <object-name>aileronD2</object-name>
    <object-name>plaque</object-name>
    <object-name>rad1</object-name>
    <object-name>volant</object-name>
    <object-name>montant</object-name>
    <object-name>manche</object-name>
    <object-name>axegouverne</object-name>
    <object-name>axe</object-name>
    <object-name>helice</object-name>
    <object-name>moteur</object-name>
    <object-name>huile</object-name>
    <object-name>bougies</object-name>
    <object-name>cables</object-name>

    <!-- Objets transparents -->
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>ailes</object-name>
    <object-name>gouverne</object-name>
    <object-name>fuselage</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
 </animation>

  <animation>
    <type>noshadow</type>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <!-- Cranking effects -->
  <!-- Left -->
  <model>
    <path>Aircraft/14bis/Models/Effects/cranking/cranking.xml</path>
    <offsets>
      <x-m>  2.040 </x-m>
      <y-m> -0.296 </y-m>
      <z-m>  0.858 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/14bis/Models/Effects/cranking/cranking.xml</path>
    <offsets>
      <x-m>  2.040 </x-m>
      <y-m>  0.296 </y-m>
      <z-m>  0.858 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/14bis/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  1.318 </x-m>
      <y-m> -0.031 </y-m>
      <z-m>  1.184 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <!-- Rotation de l'hélice/disque -->
  <animation>
    <type>spin</type>
     <object-name>HeliceComplete</object-name>
     <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> 4.406 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.621 </z-m>
    </center>
    <axis>
     <x> 1.000 </x>
     <y> 0.000 </y>
     <z> 0.000 </z>
    </axis>
  </animation>

 <!-- animations -->
 <animation>
   <type>rotate</type>
   <object-name>aileronG</object-name>
   <object-name>aileronG2</object-name>
   <property>surface-positions/left-aileron-pos-norm</property>
   <factor>18.0</factor>
   <center>
     <x-m>  1.741 </x-m>
     <y-m> -4.669 </y-m>
     <z-m>  1.514 </z-m>
   </center>
   <axis>
     <x>  0.185 </x>
     <y>  0.993 </y>
     <z>  0.000 </z>
   </axis>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>aileronD</object-name>
   <object-name>aileronD2</object-name>
   <property>surface-positions/right-aileron-pos-norm</property>
   <factor>-18.0</factor>
   <center>
     <x-m>  1.741 </x-m>
     <y-m>  4.669 </y-m>
     <z-m>  1.514 </z-m>
   </center>
   <axis>
     <x>  0.185 </x> 
     <y> -0.993 </y>
     <z>  0.000 </z>
   </axis>
 </animation>

